<Application x:Class="FastImageGallery.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FastImageGallery"
             xmlns:converters="clr-namespace:FastImageGallery.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <local:ScaleConverter x:Key="ScaleConverter"/>
        <converters:AspectRatioConverter x:Key="AspectRatioConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:BoolToArrowConverter x:Key="BoolToArrowConverter"/>
    </Application.Resources>
</Application> 